#player

	.controls
		.total "-"
		.elapsed "-"
		a.prev[href=#!music/prev]
			@svg "images/prev.svg"
		a.play[href=#!music/togglePlay]
			@svg "images/play.svg"
		a.pause[href=#!music/togglePlay]
			@svg "images/pause.svg"
		a.next[href=#!music/next]
			@svg "images/next.svg"

	.progress
		.bar

	img.cover[src=images/nocover.svg]

	.track "-"
	.artist "-"

	.clear