@define "music-playlist-track"
	li.track[data-id={{ _id }}][data-file=/rest/tracks/{{ _id }}/file][data-artist={{ artist }}][data-album={{ album }}][data-title={{ title }}]
		span.play-indicator
			@svg "images/playing.svg"
		span.number "{{ loop.index + 1 }}"
		span.artist "{{ artist || 'Unknown artist' }} "
		span.title "{{ title || 'Unknown title' }}"
		span.controls
			a.active-icon[title=Play next][href=#!music/enqueue/{{ _id }}]
				@svg "images/playlist-enqueue.svg"
			a.active-icon[title=Add to playlist][href=#!music/add/{{ _id }}]
				@svg "images/playlist-add.svg"
		span.length "{{ humanTime(length) }}"


@define "music-playlist"
	.playlist.content-box[data-name={{ name }}]
		.info
			span.title
				span.play-indicator[title=Currently playing]
					@svg "images/playing.svg"
				"{{ name === '!floating' ? 'Current playlist' : name }}"
			span.artist "{{ artists.join(', ') }}"
			span.tracks "{{ tracks.length }} tracks"
		ul.tracklist.content-list
			@each tracks
				@use "music-playlist-track"


.playlists
	@each playlists
		@use "music-playlist"
		
.loading
	"Loading !"
